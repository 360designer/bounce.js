<div class="component">
  <label for="type">Type</label>
  <select class="type-input" name="type">
    <option value="scale" selected>Scale</option>
    <option value="translate">Translate</option>
    <option value="rotate">Rotate</option>
    <option value="skew">Skew</option>
  </select>

  <label for="duration">Duration</label>
  <input type="text" value="1000" name="duration" class="duration-input">

  <label for="delay">Delay</label>
  <input type="text" value="0" name="delay" class="delay-input">

  <label for="bounces">Bounces</label>
  <input type="text" name="bounces" class="bounces-input" value=4>

  <label for="shake">Shake</label>
  <input type="checkbox" name="shake" class="shake-input">

  <label for="stiffness">Stiffness</label>
  <div class="stiffness-input"></div>
  <input type="text" class="stiffness-value">

  <div class="inputs"></div>
</div>
